<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-danger text-white">
          <h5 class="mb-0">➕ Adicionar Treino</h5>
        </div>
        <div class="card-body">
          <form action="/treinos" method="POST">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            
            <div class="mb-3">
              <label class="form-label">Aluno</label>
              <select name="treino[aluno_id]" class="form-select" required>
                <option value="">Selecione um aluno</option>
                <% Aluno.all.each do |aluno| %>
                  <option value="<%= aluno.id %>"><%= aluno.nome %></option>
                <% end %>
              </select>
            </div>

            <div class="mb-3">
              <label class="form-label">Professor</label>
              <select name="treino[professor_id]" class="form-select" required>
                <option value="">Selecione um professor</option>
                <% Professor.all.each do |prof| %>
                  <option value="<%= prof.id %>"><%= prof.nome %></option>
                <% end %>
              </select>
            </div>

            <div class="mb-3">
              <label class="form-label">Objetivo</label>
              <input type="text" name="treino[objetivo]" class="form-control">
            </div>

            <div class="mb-3">
              <label class="form-label">Data Início</label>
              <input type="date" name="treino[data_inicio]" class="form-control">
            </div>

            <div class="mb-3">
              <label class="form-label">Data Fim</label>
              <input type="date" name="treino[data_fim]" class="form-control">
            </div>

            <div class="mb-3">
              <label class="form-label">Observações</label>
              <textarea name="treino[observacoes]" class="form-control" rows="3"></textarea>
            </div>

            <div class="d-flex gap-2">
              <button type="submit" class="btn btn-primary">Salvar</button>
              <a href="/treinos" class="btn btn-secondary">Cancelar</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
