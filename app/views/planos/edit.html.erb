<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-warning">
          <h5 class="mb-0">✏️ Editar Plano</h5>
        </div>
        <div class="card-body">
          <form action="/planos/<%= @plano.id %>" method="POST">
            <input type="hidden" name="_method" value="PATCH">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            
            <div class="mb-3">
              <label class="form-label">Nome do Plano</label>
              <input type="text" name="plano[nome_plano]" class="form-control" value="<%= @plano.nome_plano %>" required>
            </div>

            <div class="mb-3">
              <label class="form-label">Descrição</label>
              <textarea name="plano[descricao]" class="form-control" rows="3"><%= @plano.descricao %></textarea>
            </div>

            <div class="mb-3">
              <label class="form-label">Valor Mensal</label>
              <input type="number" name="plano[valor_mensal]" step="0.01" class="form-control" value="<%= @plano.valor_mensal %>" required>
            </div>

            <div class="mb-3">
              <label class="form-label">Duração (meses)</label>
              <input type="number" name="plano[duracao_meses]" class="form-control" value="<%= @plano.duracao_meses %>" required>
            </div>

            <div class="d-flex gap-2">
              <button type="submit" class="btn btn-primary">Salvar</button>
              <a href="/planos" class="btn btn-secondary">Cancelar</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
