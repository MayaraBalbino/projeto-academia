<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0">üìù Criar Conta</h3>
        </div>
        <div class="card-body">
          <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true) do |form| %>
            <% if resource.errors.any? %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <h5><%= pluralize(resource.errors.count, "erro") %> impediu que esta conta fosse criada:</h5>
                <ul class="mb-0">
                  <% resource.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :nome, "Nome Completo" %>
              <%= form.text_field :nome, class: "form-control", autofocus: true, required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :email, "E-mail" %>
              <%= form.email_field :email, class: "form-control", autocomplete: "email", required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :password, "Senha" %>
              <%= form.password_field :password, class: "form-control", autocomplete: "new-password", required: true %>
              <small class="text-muted">M√≠nimo de 6 caracteres</small>
            </div>

            <div class="mb-3">
              <%= form.label :password_confirmation, "Confirma√ß√£o de senha" %>
              <%= form.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", required: true %>
            </div>

            <div class="d-grid">
              <%= form.submit "Criar Conta", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <p class="mb-2">J√° tem uma conta?</p>
            <%= link_to "Conectar", new_user_session_path, class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
