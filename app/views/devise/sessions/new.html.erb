<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <div class="card shadow">
        <div class="card-header bg-success text-white">
          <h3 class="mb-0">üîê Conecte-se</h3>
        </div>
        <div class="card-body">
          <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |form| %>
            <div class="mb-3">
              <%= form.label :email, "E-mail" %>
              <%= form.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :password, "Senha" %>
              <%= form.password_field :password, class: "form-control", autocomplete: "current-password", required: true %>
            </div>

            <div class="mb-3 form-check">
              <%= form.check_box :remember_me, class: "form-check-input" %>
              <%= form.label :remember_me, "Lembrar-me", class: "form-check-label" %>
            </div>

            <div class="d-grid">
              <%= form.submit "Conectar", class: "btn btn-success btn-lg" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <p class="mb-2">N√£o tem uma conta?</p>
            <%= link_to "Criar Conta", new_user_registration_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
