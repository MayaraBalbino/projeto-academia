{
  "name": "Rails Codespace Dev",
  "image": "mcr.microsoft.com/devcontainers/ruby:3.3",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/postgres:1": {
      "version": "15"
    },
    "ghcr.io/devcontainers/features/yarn:1": {}
  },
  "forwardPorts": [3000],
  "postCreateCommand": "bundle install && rails db:prepare || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "rebornix.Ruby",
        "castwide.solargraph",
        "kaiwood.endwise",
        "bung87.vscode-gemfile",
        "eamodio.gitlens"
      ]
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "Rails server",
      "onAutoForward": "openPreview"
    }
  },
  "remoteUser": "vscode"
}